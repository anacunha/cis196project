<h1>My Games</h1>

<table>
  <tr>
    <th>Game</th>
    <th>Platform</th>
    <th>Genre</th>
    <th>Developer</th>
    <th>Publisher</th>
    <th>Release date</th>
    <th></th>
    <th></th>
  </tr>

<% @user.game_platforms.each do |game_platform| %>
  <tr>
    <td><%= game_platform.game.title %></td>
    <td><%= game_platform.platform.name %></td>
    <td><%= game_platform.game.genre %></td>
    <td><%= game_platform.game.developer %></td>
    <td><%= game_platform.game.publisher %></td>
    <td><%= game_platform.game.release_date %></td>
    <td>Edit</td>
    <td>Remove from my collection</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New GamePlatform', new_game_platform_path %>
