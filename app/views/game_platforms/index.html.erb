<h1>Listing game_platforms</h1>

<table>
  <tr>
    <th>Game</th>
    <th>Platform</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @game_platforms.each do |game_platform| %>
  <tr>
    <td><%= game_platform.game_title %></td>
    <td><%= game_platform.platform_name %></td>
    <td><%= link_to 'Show', game_platform %></td>
    <td><%= link_to 'Edit', edit_game_platform_path(game_platform) %></td>
    <td><%= link_to 'Destroy', game_platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

