<%= form_for(@game, html: { class: 'form-horizontal' }) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="control-group"> 
    <%= f.label :video_game_console_id, class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :video_game_console_id, @video_game_consoles, :id, :name %>
      <%= link_to "Add platform", new_video_game_console_path, class: "btn" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :genre, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :genre %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :developer, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :developer %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :publisher, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :publisher %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :release_date, class: 'control-label' %>
    <div class="controls">
      <%= f.date_select :release_date %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
