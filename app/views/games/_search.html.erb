<%= form_tag({:controller => 'games', :action => 'search', :method => 'get'}, :class => 'form-search') do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field', placeholder: 'Search for games..', class: 'input-large search-query' %>
  <%= submit_tag 'Search', :name => nil, class: 'btn btn-mini disabled' %> 
<% end %>