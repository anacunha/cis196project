<%= form_for(@platform, html: { class: 'form-horizontal' }) do |f| %>
  <% if @platform.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@platform.errors.count, "error") %> prohibited this platform from being saved:</h2>

      <ul>
      <% @platform.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, placeholder: 'Platform Name' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :manufacturer, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :manufacturer, placeholder: 'Manufacturer' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :release_date, class: 'control-label' %>
    <div class="controls">
      <%= f.date_select :release_date, :start_year => Time.now.year, :end_year => 1980, :include_blank => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, placeholder: 'Game Platform description ...', :cols => "30", :rows => "5" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
