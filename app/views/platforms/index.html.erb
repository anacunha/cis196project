<h1>Platforms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Release date</th>
    <th>Manufacturer</th>
  </tr>

<% @platforms.each do |platform| %>
  <tr>
    <td><%= link_to platform.name, platform_path(platform) %></td>
    <td><%= platform.release_date %></td>
    <td><%= platform.manufacturer %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Platform', new_platform_path %>
