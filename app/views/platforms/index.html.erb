<h1>Game Platforms</h1>
<br />
<div class="row-fluid">
  <% @platforms.each_with_index do |platform, index| %>
  <% if index % 4 == 0 %>
    </ul>
    <ul class="thumbnails">
  <% end %>
  <li class="span3">
    <div class="thumbnail">
      <% if platform.image_url.blank? %>
        <img src="/assets/no_image.png"/>
      <% else %>
        <%= link_to image_tag(platform.image_url), platform_path(platform), class: 'platform' %>
      <% end %>
      <div class="caption">
        <h4><%= platform.name %></h4>
        <p><%= truncate(platform.description, :length => 72, :separator => ' ', :omission => ' (...)' ) %></p>
        <p><%= link_to 'More info', platform_path(platform) %>
      </div>
    </div>
  </li>
  <% end %>
</div>

<br />

<%= link_to 'Add New Platform', new_platform_path, class: 'btn btn-primary' %>
