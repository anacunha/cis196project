<h1>Listing ownerships</h1>

<table>
  <tr>
    <th>Purchase date</th>
    <th>Amount paid</th>
    <th>User</th>
    <th>Game</th>
    <th>Platform</th>
    <th>Game retailer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ownerships.each do |ownership| %>
  <tr>
    <td><%= ownership.purchase_date %></td>
    <td><%= ownership.amount_paid %></td>
    <td><%= ownership.user_name %></td>
    <td><%= ownership.game_title %></td>
    <td><%= ownership.platform_name %></td>
    <td><%= ownership.game_retailer_name %></td>
    <td><%= link_to 'Show', ownership %></td>
    <td><%= link_to 'Edit', edit_ownership_path(ownership) %></td>
    <td><%= link_to 'Destroy', ownership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

