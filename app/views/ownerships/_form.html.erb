<%= form_for(@ownership, :html => { :class => 'form-horizontal'}) do |f| %>
  <% if @ownership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ownership.errors.count, "error") %> prohibited this ownership from being saved:</h2>

      <ul>
      <% @ownership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label 'Game and Platform', class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :game_platform_id, @game_platforms, :id, :game_platform_pair %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :game_retailer, class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :game_retailer_id, @game_retailers, :id, :name, :include_blank => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount_paid, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount_paid %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :purchase_date, class: 'control-label' %>
    <div class="controls">
      <%= f.date_select :purchase_date, :start_year => Time.now.year, :end_year => 2000, :include_blank => true %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit 'Update My Game', class: 'btn btn-primary' %>
  </div>
<% end %>
